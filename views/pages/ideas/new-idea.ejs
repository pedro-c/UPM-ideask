<div id="idea" v-cloak>
  <div class="main-panel">

    <div class="content">
      <div class="row">
        <div class="col-md-12">

          <div class="card">
            <div class="card-header">
              <h4 class="card-title">Create an idea</h4>
            </div>
            <div class="card-body">

              <div class="idea-form">
                <p class="text-center">Share your ideas with the world!</p>
                <hr/>

                <ajax-form action="newIdea" :syncing.sync="syncing" :cloud-error.sync="cloudError"
                           @submitted="submittedForm()"
                           :handle-parsing="handleParsingForm">
                  <div class="row">
                    <div class="form-group col-md-6">
                      <label for="title">Title</label>
                      <input class="form-control" id="title" type="text" :class="[formErrors.title ? 'is-invalid' : '']"
                             v-model.trim="formData.title" placeholder="Appealing title" autocomplete="name"
                             focus-first>
                      <div class="invalid-feedback" v-if="formErrors.idea">Please provide a title for your idea.</div>
                    </div>
                    <div class="form-group col-md-6">
                      <label for="title">Subtitle</label>
                      <input class="form-control" id="subtitle" type="text"
                             :class="[formErrors.subtitle ? 'is-invalid' : '']"
                             v-model.trim="formData.subtitle" placeholder="Appealing subtitle" autocomplete="name"
                             focus-first>
                      <div class="invalid-feedback" v-if="formErrors.idea">Please provide a subtitle for your idea.
                      </div>
                    </div>
                    <div class="form-group col-md-12">
                      <label for="email-address">Description</label>
                      <input class="form-control" id="description" type="textarea"
                             :class="[formErrors.description ? 'is-invalid' : '']" v-model.trim="formData.description"
                             placeholder="">
                    </div>
                    <div class="form-group col-md-12">
                      <label for="email-address">Notes</label>
                      <input class="form-control" id="notes" type="textarea"
                             :class="[formErrors.notes ? 'is-invalid' : '']"
                             v-model.trim="formData.notes" placeholder="">
                    </div>
                    <div class="form-group col-md-12">
                      <div class="row">
                        <ajax-button type="submit" :syncing="syncing"
                                     class="col-md-4 btn-primary btn-round btn-lg btn-block">Create
                        </ajax-button>
                        <a href="/users/ideas" class="col-md-4 btn btn-round btn-lg btn-block">Cancel</a>
                      </div>
                    </div>
                  </div>
                </ajax-form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
