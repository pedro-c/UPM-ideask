<div id="user-ideas" v-cloak>
  <div class="main-panel">
    <div class="content">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <h4 class="card-title"> <%= user.firstName %> <%= user.lastName %> ideas</h4>
            </div>
            <div class="card-body">
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col"><strong>Name</strong></th>
                    <th scope="col"><strong>Subtitle</strong></th>
                    <th scope="col"><strong>Description</strong></th>
                    <th scope="col"><strong>Notes</strong></th>
                    <th scope="col"><strong>Upvotes</strong></th>
                    <th scope="col"><strong>Downvotes</strong></th>
                  </tr>
                </thead>
                <tbody>
                <% _.each(ideas, function (idea) { %>
                  <tr>
                    <td>
                      <a href="#"><%= idea.title %></a>
                    </td>
                    <td>
                      <%= idea.subtitle %>
                    </td>
                    <td>
                      <%= idea.description %>
                    </td>
                    <td>
                      <%= idea.notes %>
                    </td>
                    <td>
                        <%= idea.upvoters.length %>
                      </td>
                      <td>
                          <%= idea.downvoters.length %>
                      </td>
                    <td class="text-right">
                      <a href="/ideas/<%= idea.id %>/edit" type="submit" class="btn btn-default btn-sm col-md-4">
                        Edit</a>
                      <a  class="btn btn-danger btn-sm col-md-4" data-toggle="modal" data-target="#deletemodal"> Delete</a>

                      <!-- Mini Modal -->
                      <div class="modal fade modal-mini modal-primary" id="deletemodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                          <div class="modal-content">
                            <div class="modal-body">
                              <p>Do you really want to delete this?</p>
                            </div>
                            <div class="modal-footer">
                              <a href="/api/v1/ideas/<%= idea.id %>/delete"><button type="button" class="btn btn-link btn-neutral">Yes</button></a>
                              <button type="button" class="btn btn-link btn-neutral" data-dismiss="modal">No</button>
                            </div>
                          </div>
                        </div>
                      </div>
                      <!--  End Modal -->

                    </td>
                  </tr>
                <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <a href="/new/idea" class="col-md-4 btn btn-primary btn-round btn-lg btn-block">Create new idea</a>
      </div>
    </div>
  </div>
</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>
